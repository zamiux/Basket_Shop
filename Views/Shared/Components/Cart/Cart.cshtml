@model IEnumerable<Basket.Models.ViewModels.ShowCartViewModel>

<div class="list-group" style="text-align: center;">
    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
        Basket Items
    </a>
    @*<a href="#" class="list-group-item list-group-item-action">A second link item</a>*@
    @if (Model.Count() > 0)
    {
        <ul class="list-group list-group-flush">
            @foreach (var item in Model)
            {

                <li class="list-group-item">
                    @item.Title 
                    / @item.Count
                    <img style="max-width:50px;border-radius:50%" src="/Images/@item.ImageName" />
                    </li>

            }
        </ul>
    }
    else
    {
        <a href="#" class="list-group-item list-group-item-action">Basket is Empty</a>
    }

    @if (Model.Any())
    {
        <a asp-controller="Order" asp-action="ShowOrder" class="btn btn-outline-success" style="width:100%">Show Faktor</a>
    }
</div>   